/**index.wxss**/

page {
  width: 100%;
  height: 100%;
  background: #f6f6f6;
  overflow-y: hidden; 
}
.container {
  display: flex;
  flex-flow: column nowrap;
  justify-content: top;
  align-items: top;
  width: 100%;
  height: 100%;
}
.top {
  flex: 0 0 40%;
  width: 100%;
  background:linear-gradient(#4990e2,#87c1f1);
  position: relative;
}

.list{
  width: 100%;
  flex: 0 0 60%;
}
.list_item{
  background-color: #fff;
  height: 150rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
}
.list_item_alter{
  background-color: #f6f9fe;
}

/* 去除滚动条的样式 */
::-webkit-scrollbar{
  width: 0;
  height: 0;
}

.topTitle{
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  padding-top:60rpx;
}

.title{
  padding-right: 40rpx;
}
.subtitle{
  text-align: center;
  color: #f3f3f3;
  font-size: 24rpx;
}
.content{
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.temperature{
  font-size: 56rpx;
}
.tips{
  font-size: 24rpx;
  text-align: center;
  position: absolute;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #fff;
}